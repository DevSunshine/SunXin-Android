<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension"/>
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension"/>
        <attr name="indicatorName" format="string"/>
        <attr name="indicatorColor" format="color"/>
    </declare-styleable>

    <attr name="tab_top_line_color" format="color" />
    <attr name="tab_padding" format="dimension" />
    <attr name="tab_drawable_padding" format="dimension" />
    <declare-styleable name="MainTab">
        <attr name="tab_top_line_color" />
        <attr name="tab_padding" />
        <attr name="tab_drawable_padding" />
    </declare-styleable>

    <declare-styleable name="QuickSideBarView">
        <attr name="sidebarTextColor" format="color|reference"/>
        <attr name="sidebarBackgroundColor" format="color|reference"/>
        <attr name="sidebarTextColorChoose" format="color|reference"/>
        <attr name="sidebarTextSize" format="dimension"/>
        <attr name="sidebarTextSizeChoose" format="dimension"/>
        <attr name="sidebarItemHeight" format="dimension"/>
    </declare-styleable>
</resources>