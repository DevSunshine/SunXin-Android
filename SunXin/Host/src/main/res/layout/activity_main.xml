<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.sunshine.sunxin.MainActivity">

    <TextView
        android:textColor="@android:color/holo_red_dark"
        android:text="connect socket" android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:onClick="connectSocket"
        android:clickable="true"/>
    <TextView android:text="startPlugin1" android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:onClick="startPlugin1"
        android:layout_centerInParent="true"
        android:textSize="16dp"
        android:textColor="@android:color/holo_blue_bright"
        android:clickable="true"/>

    <TextView android:text="startPlugin2" android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:onClick="startPlugin2"
        android:layout_marginTop="60dp"
        android:textSize="16dp"
        android:textColor="@android:color/holo_blue_bright"
        android:clickable="true"/>

    <TextView android:text="startPlugin3" android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:onClick="startPlugin3"
        android:layout_marginTop="120dp"
        android:textSize="16dp"
        android:textColor="@android:color/holo_blue_bright"
        android:clickable="true"/>

</RelativeLayout>
