        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_msg_menu_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </LinearLayout>

</RelativeLayout>