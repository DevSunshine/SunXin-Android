<?xml version="1.0" encoding="utf-8"?>
<com.sunxin.plugin.personal.FlaxLayout
    android:id="@+id/id_flax_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_flax_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color333"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="页面由sunshine公司提供"
            android:textColor="@color/color666"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="guangyanzhong提供技术支持"
            android:textColor="@color/color666"/>
    </LinearLayout>

    <ScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMain"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/id_header_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/header_icon" />

                <TextView
                    android:id="@+id/id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_header_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="钟光燕"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color666"
                android:textSize="12sp"
                android:text="下拉或上拉试试"
                android:layout_gravity="center"/>
            <TextView
                android:layout_marginTop="1200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color666"
                android:textSize="12sp"
                android:text="下拉或上拉试试"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

</com.sunxin.plugin.personal.FlaxLayout>