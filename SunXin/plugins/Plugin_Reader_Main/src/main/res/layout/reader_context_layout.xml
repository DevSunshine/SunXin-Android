<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sunxin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/id_reader_content_fragment"/>

    <com.sunshine.sunxin.view.MainTab
        android:layout_width="match_parent"
        android:layout_height="@dimen/reader_tab_height"
        android:textColor="@color/tab_reader_text_color"
        android:textSize="11sp"

        android:background="@color/colorWhite"
        android:id="@+id/id_reader_tab"
        />
</LinearLayout>